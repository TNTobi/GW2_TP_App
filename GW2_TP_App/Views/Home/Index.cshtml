@model GW2_TP_App.ViewModels.BoughtItemsVM

@{
    ViewBag.Title = "Home Page";



}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>


<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price Bought</th>
                <th>Price sold (plan)</th>
            </tr>
            @foreach (var i in Model.boughtItems)
            {
            <tr>
                <td>@i.Name</td>
                <td>@i.Quantity</td>
                <td>@i.Price_buy</td>
                <td>@i.Price_sell_plan</td>
            </tr>

            }
        </table>
        
    </div>

</div>